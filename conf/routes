# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)

#
# REST routes
#

## account
POST        /rest/login                       @controllers.rest.LoginRestController.login()
POST        /rest/registration                @controllers.rest.LoginRestController.registration()
GET         /rest/logout                      @controllers.rest.LoginRestController.logout()

##account
PUT         /rest/account/:id                 @controllers.rest.AccountRestController.editAccount(id:Long)
PUT         /rest/account/email/:id           @controllers.rest.AccountRestController.changeEmail(id:Long)
PUT         /rest/account/password/:id        @controllers.rest.AccountRestController.changePassword(id:Long)

##welcome
GET         /                                 @controllers.MainController.mainPage()
