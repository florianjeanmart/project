# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                     controllers.Assets.at(path="/public", file)

#
# REST routes
#

## account
POST        /rest/login                       @be.flo.project.controller.rest.LoginRestController.login()
POST        /rest/registration                @be.flo.project.controller.rest.LoginRestController.registration()
GET         /rest/logout                      @be.flo.project.controller.rest.LoginRestController.logout()

##account
PUT         /rest/account/:id                 @be.flo.project.controller.rest.AccountRestController.editAccount(id:Long)
PUT         /rest/account/email/:id           @be.flo.project.controller.rest.AccountRestController.changeEmail(id:Long)
PUT         /rest/account/password/:id        @be.flo.project.controller.rest.AccountRestController.changePassword(id:Long)

#file
POST        /rest/file/                      @be.flo.project.controller.rest.FilesController.upload()
GET         /rest/file/:storedFileId         @be.flo.project.controller.rest.FilesController.download(storedFileId: Long)

##welcome
GET         /                                 @be.flo.project.controller.MainController.mainPage()
